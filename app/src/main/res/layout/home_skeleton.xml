<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="vertical">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sfl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height25"
                android:background="@color/gray"
                android:layout_margin="@dimen/margin5"/>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sfl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/light_gray"
            android:padding="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin10">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/gray"
            android:src="@drawable/ic_img_placeholder"
            android:scaleType="fitXY"/>
    </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:background="@color/cardbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sfl3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin10"
            android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/gray"
            android:scaleType="fitXY"
            android:src="@drawable/ic_img_placeholder"/>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sfl4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin10"
            android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/gray"
            android:scaleType="fitXY"
            android:src="@drawable/ic_img_placeholder"/>
        </com.facebook.shimmer.ShimmerFrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sfl5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin10">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:tint="@color/gray"
            android:src="@drawable/ic_img_placeholder"/>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sfl6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin10">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/gray"
            android:scaleType="fitXY"
            android:src="@drawable/ic_img_placeholder"/>
        </com.facebook.shimmer.ShimmerFrameLayout>
    </LinearLayout>
</LinearLayout>
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/sfl7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardbg"
        android:layout_marginTop="@dimen/margin10"
        android:padding="@dimen/margin5">
            <LinearLayout
            android:layout_width="160dp"
            android:layout_height="@dimen/height20"
            android:background="@color/gray"
            android:layout_margin="@dimen/margin5"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="@dimen/height20"
            android:background="@color/gray"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin5"/>
    </RelativeLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sfl8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginRight="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:padding="@dimen/margin10"
                android:orientation="vertical"
                android:background="@color/cardbg">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_weight="5"
                    android:src="@drawable/ic_img_placeholder"
                    android:tint="@color/gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height15"
                    android:background="@color/conticolor"
                    android:layout_marginTop="@dimen/margin5"
                    android:layout_marginBottom="@dimen/margin5"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height15"
                    android:background="@color/conticolor"
                    android:layout_marginRight="@dimen/height40"
                    android:layout_marginBottom="@dimen/margin5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height15"
                    android:background="@color/conticolor"
                    android:layout_marginRight="@dimen/margin60"/>
            </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/sfl9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin5"
                android:layout_marginLeft="@dimen/margin5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:padding="@dimen/margin10"
                android:orientation="vertical"
                android:background="@color/cardbg">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_weight="5"
                    android:tint="@color/gray"
                    android:src="@drawable/ic_img_placeholder"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height15"
                    android:background="@color/conticolor"
                    android:layout_marginTop="@dimen/margin5"
                    android:layout_marginBottom="@dimen/margin5"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height15"
                    android:background="@color/conticolor"
                    android:layout_marginRight="@dimen/height40"
                    android:layout_marginBottom="@dimen/margin5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height15"
                    android:background="@color/conticolor"
                    android:layout_marginRight="@dimen/margin60"/>
            </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sfl10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="@integer/int_1"
                android:layout_marginLeft="@dimen/height20"
                android:layout_marginRight="@dimen/height20"
                app:cardBackgroundColor="@color/graylight"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"
                app:cardCornerRadius="@dimen/dimen_40dp">
                <ImageView
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:src="@drawable/ic_btn_skeleton"/>
            </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/int_1"
            android:layout_marginLeft="@dimen/height20"
            android:layout_marginRight="@dimen/height20"
            app:cardBackgroundColor="@color/graylight"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin5"
            app:cardCornerRadius="@dimen/dimen_40dp">
            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/dimen_5dp"
                android:src="@drawable/ic_btn_skeleton"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/int_1"
            android:layout_marginLeft="@dimen/height20"
            android:layout_marginRight="@dimen/height20"
            app:cardBackgroundColor="@color/graylight"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin5"
            app:cardCornerRadius="@dimen/dimen_40dp">
            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/dimen_5dp"
                android:src="@drawable/ic_btn_skeleton"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/int_1"
            android:layout_marginLeft="@dimen/height20"
            android:layout_marginRight="@dimen/height20"
            app:cardBackgroundColor="@color/graylight"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin5"
            app:cardCornerRadius="@dimen/dimen_40dp">
            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/dimen_5dp"
                android:src="@drawable/ic_btn_skeleton"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@integer/int_1"
            android:layout_marginLeft="@dimen/height20"
            android:layout_marginRight="@dimen/height20"
            app:cardBackgroundColor="@color/graylight"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin5"
            app:cardCornerRadius="@dimen/dimen_40dp">
            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/dimen_5dp"
                android:src="@drawable/ic_btn_skeleton"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>
