                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_low"
                        android:text="+91 9821177684"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakups_layout"
        android:padding="@dimen/margin10"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a payment option"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/dimen_20sp"
            android:gravity="left|center" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pay_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"/>
    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/frame_no_delivery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:foregroundGravity="center_vertical">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_no_delivery"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/cards_number_textColor"
            android:text="Oops! No delivery option available for your location."
            />
    </FrameLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16sp"
        android:background="@color/red"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>