<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialogt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/notify_text"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textCapWords"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.Small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:text=" you as soon as the product is "
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textCapWords"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.Small"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:text="back in stock!"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textCapWords"
            android:textColor="@android:color/black"
            android:textAppearance="@android:style/TextAppearance.Small"/>




        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="@dimen/margin10"
            android:hint="Your Name"
            android:lines="1"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textCapWords"
            android:textColor="@android:color/black"
            android:background="@drawable/blue_bg_outline"
            android:textAppearance="@android:style/TextAppearance.Small"/>
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="@dimen/margin10"
            android:hint="Your Email"
            android:lines="1"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:background="@drawable/blue_bg_outline"
            android:textAppearance="@android:style/TextAppearance.Small"/>
        <EditText
            android:id="@+id/et_remark"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:padding="@dimen/margin10"
            android:gravity="top|left"
            android:hint="Remarks"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:background="@drawable/blue_bg_outline"
            android:textAppearance="@android:style/TextAppearance.Small"/>

        <Button
            android:id="@+id/btn_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:paddingLeft="@dimen/height30"
            android:paddingRight="@dimen/height30"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/poppins_regular"
            android:text="Notify Me!"
            android:textSize="@dimen/dimen_16sp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>