<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <!--<com.github.chrisbanes.photoview.PhotoView-->
    <!--android:id="@+id/imageView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scaleType="centerCrop"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <ImageButton
            android:id="@+id/img_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@mipmap/ic_close_cross"
            android:padding="@dimen/margin10" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_btn_delete"
            android:layout_marginTop="@dimen/height20"
            android:layout_marginBottom="@dimen/margin50"
            android:background="@null" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal">
        <ImageView
            android:id="@+id/img_dot1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/margin5"
            android:src="@drawable/non_active"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/img_dot2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/margin5"
            android:src="@drawable/non_active"
            android:scaleType="fitXY"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_dot3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/margin5"
            android:src="@drawable/non_active"
            android:scaleType="fitXY"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/img_dot4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="@dimen/margin5"
            android:src="@drawable/non_active"
            android:scaleType="fitXY"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
