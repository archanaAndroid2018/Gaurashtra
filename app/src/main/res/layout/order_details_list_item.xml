<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llproduct"
        android:layout_margin="@dimen/margin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="5dp"
            android:layout_weight="1.5">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@mipmap/kewda"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/llquantity"
                android:layout_width="@dimen/height90"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:padding="@dimen/text_margin_minimum"
                android:background="@drawable/addressbox">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity:"
                    android:textColor="@color/light_black"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size_mini"/>

                <TextView
                    android:id="@+id/tv_product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 1"
                    android:textColor="@color/light_black"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size_mini"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_marginTop="@dimen/margin10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gavyamrut Herbal Hair Shampoo 200ML"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_size_mid"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/option_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_marginRight="@dimen/margin20">
                <TextView
                    android:id="@+id/tv_option_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume: "
                    android:textColor="@color/red"/>
                <TextView
                    android:id="@+id/tv_option_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin5"
                    android:text="100 ml"
                    android:textStyle="italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin5"
                android:gravity="left"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/prod_wl_star1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/prod_wl_star2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/prod_wl_star3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/prod_wl_star4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/prod_wl_star5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/star"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 0 review"
                    android:textColor="@color/gray"
                    android:visibility="gone"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_old_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin5"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvoldAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="\u20B9 200.00"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_mid"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginLeft="@dimen/margin10"
                        android:background="@color/gray"
                        android:layout_gravity="center">
                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/text_margin_minimum"
                    android:background="@drawable/amountbg">

                    <TextView
                        android:id="@+id/tv_dis_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_mini"
                        android:textColor="@color/light_black"
                        android:text="50% OFF"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/tv_net_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_mid"
                        android:textColor="@color/light_black"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:text="\u20B9 100.00"/>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_write_review"
                android:layout_width="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:background="@color/review_box"
                android:layout_height="30dp">

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/light_red"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin10"
                    android:layout_marginLeft="@dimen/margin10"
                    android:gravity="center"
                    android:text="Write a review"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
