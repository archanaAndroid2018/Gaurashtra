<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/upper_corner_round_shape"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/coupon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:background="@drawable/dashed_outline"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/home_bg"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="COUPONS"
            android:paddingBottom="@dimen/margin5"
            android:paddingTop="@dimen/margin5"
            android:paddingLeft="@dimen/height20"
            android:paddingRight="@dimen/height20"
            android:drawablePadding="@dimen/margin10"
            android:drawableLeft="@drawable/ic_offer"
            android:drawableTint="@color/light_red"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/light_red"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_no_coupon_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No coupon available!"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin5"
            app:cardBackgroundColor="@color/light_bg">
            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.4">

                    <EditText
                        android:id="@+id/et_user_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height40"
                        android:layout_margin="@dimen/margin10"
                        android:background="@drawable/dashed_outline"
                        android:gravity="center"
                        android:hint="Coupon Code"
                        android:imeOptions="actionDone"
                        android:inputType="textCapCharacters|textNoSuggestions"
                        android:padding="@dimen/margin5"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6">
                    <TextView
                        android:id="@+id/tv_btn_apply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/margin5"
                        android:layout_marginRight="@dimen/margin10"
                        android:textColor="@color/light_red"
                        android:background="@drawable/button_bg"
                        android:layout_gravity="center"
                        android:text="Apply"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:background="@color/light_gray"
            android:orientation="horizontal"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_coupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_btn_coupon_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_red"
        android:padding="@dimen/margin5"
        android:layout_marginTop="@dimen/height30"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:gravity="center"/>

    </LinearLayout>
</LinearLayout>
</RelativeLayout>
