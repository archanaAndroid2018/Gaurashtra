<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin5"
    app:cardBackgroundColor="@color/light_bg">
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin5"
        android:weightSum="2">

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_sel_icon"
            android:layout_width="@dimen/height20"
            android:layout_height="@dimen/height20"
            android:scaleType="fitXY"
            android:src="@drawable/ic_circle_ring"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.4">

        <TextView
            android:id="@+id/tv_coupon_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="COUPON TITLE"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_coupon_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/height20"
            android:layout_marginLeft="@dimen/height20"
            android:layout_marginBottom="@dimen/margin5"
            android:gravity="left|center"
            android:text="Coupon long content....."
            android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6">
            <TextView
                android:id="@+id/tv_btn_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin10"
                android:gravity="center"
                android:padding="@dimen/margin5"
                android:textColor="@color/light_red"
                android:background="@drawable/button_bg"
                android:layout_gravity="center"
                android:text="Apply"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:background="@color/light_gray"
        android:orientation="horizontal"/>
</LinearLayout>